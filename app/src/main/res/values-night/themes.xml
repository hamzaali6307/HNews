<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="editTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/ic_edit_search_light</item>
        <item name="drawableStartCompat">@drawable/ic_search_day</item>
        <item name="android:hint">@string/searching</item>
        <item name="android:inputType">textAutoCorrect</item>
    </style>

    <style name="textTitleStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="fontFamily">@font/sf_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="textWarningStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="textSettingItemStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="textAllCaps">false</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="textListTitleStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="fontFamily">@font/sf_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:maxLines">3</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="textListDetailStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="fontFamily">@font/sf_regular</item>
        <item name="textAllCaps">false</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:maxLines">5</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="loadingStyle" parent="ThemeOverlay.Material3">
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/loading_light</item>
        <item name="android:visibility">invisible</item>

    </style>

    <style name="textSubHeadingStyle" parent="ThemeOverlay.Material3">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="font">@font/sf_bold</item>
        <item name="android:padding">@dimen/_8sdp</item>

    </style>

</resources>